<Page x:Class="ИтоговоеЗадание.Pages.AddClientService"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ИтоговоеЗадание.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddClientService">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Name="txtServiceTitle"/>
            <TextBlock Name="txtServiceDuration"/>
            <ComboBox Name="CBClient"/>
            <StackPanel Orientation="Horizontal">
                <DatePicker Name="DateStart" MinWidth="150"/>
                <TextBox Name="TimeStart" MinWidth="150"/>
            </StackPanel>
            <TextBox Name="Comment"/>
            <Button Name="BtnSave" Content="Сохранить" Click="BtnSave_Click"/>
        </StackPanel>
    </Grid>
</Page>
